<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>MauiRunner</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>maui-runner</ToolCommandName>
    <PackageOutputPath>../../.nupkg</PackageOutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <Version>0.0.1.0</Version>
    <AssemblyVersion>0.0.1.0</AssemblyVersion>
    <FileVersion>0.0.1.0</FileVersion>
    <Company>Newwave Solutions JSC</Company>
    <Authors>Tuyen Vu</Authors>
    <Product>DotnetTools</Product>
    <Description>A tool to quickly run a MAUI application on iOS simulators/Android devices</Description>
    <Copyright>Copyright Â© 2022</Copyright>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Services\" />
    <None Remove="Utils\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Services\" />
    <Folder Include="Utils\" />
  </ItemGroup>
</Project>
